@model List<UserRolesViewModel>

@{
    var userId = ViewBag.userId;
}

    <div class="col-md-7">
        <div class="card">
            <form method="post">
                <div class="card">

                    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                            <h6 class="text-white text-capitalize ps-3" style="text-align:center;"> جميع الصلاحيات </h6>
                        </div>
                    </div>
                    <div class="card-body">

                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                    @Model[i].RoleName
                                </label>
                            </div>
                        }
                        <div asp-validation-summary="All" class="text-danger"></div>

                    </div>
                    <div class="card-footer">

                        <a asp-action="EditUser" asp-route-id="@userId"
                           class="btn btn-secondary rounded-pill col-3">الغاء الامر</a>
                        <input type="submit" value="تعديل" class="btn btn-success rounded-pill col-3" />


                    </div>
                </div>
            </form>
</div>
</div>