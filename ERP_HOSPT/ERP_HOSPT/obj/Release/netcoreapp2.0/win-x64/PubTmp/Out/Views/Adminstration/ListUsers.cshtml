@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

@*<h1 style="text-align:center;
    color:#4154f1;">جميع المستخدمين</h1>
    <br />
    <br />*@
@*<a asp-action="Index" asp-controller="Home"
   class="btn btn-secondary rounded-pill ">الرجوع</a>*@
@if (Model.Any())
{
    foreach (var user in Model)
    {
        <div class="card mb-3" style="width:70%;">
            <div class="card-header" style="background-color:#4154f1;
color:white;">
                <h5>رقم المستخدم : @user.Id</h5>
            </div>
            <div class="card-body">

                <h5 class="card-title">اسم المستخدم : @user.UserName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">

                    <a asp-action="EditUser" asp-controller="Adminstration"
                       asp-route-id="@user.Id" class="btn btn-success  rounded-pill col-2">تعديل</a>

                    <span id="confirmDeleteSpan_@user.Id" style="display:none">
                        <span> هل أنت متأكد أنك تريد حذف؟ </span>
                        <button type="submit" class="btn btn-danger col-2" >نعم</button>
                        <a href="#" class="btn btn-primary col-2"
                           onclick="confirmDelete('@user.Id', false)">لا</a>
                    </span>

                    <span id="deleteSpan_@user.Id">
                        <a href="#" class="btn btn-danger rounded-pill col-2"
                           onclick="confirmDelete('@user.Id', true)">حذف</a>
                    </span>

                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Account" asp-action="Register">
                Add new user
            </a>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/site.js"></script>
}
