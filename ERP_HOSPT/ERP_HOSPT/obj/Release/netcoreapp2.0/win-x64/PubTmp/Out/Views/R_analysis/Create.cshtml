@model ERP_HOSPT.Data.interview

@{
    Layout = null;
}

<div class="col-lg-12">

    <div class="card">
        <div class="card-body">
            <form asp-action="Create" asp-route-id="@Model.interviewId" onsubmit="return jQueryAjaxPost(this);">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-md-12">
                    <label asp-for="interviewId" class="control-label"></label>
                    <input class="form-control" name="interviewId" value="@Model.interviewId" disabled>
                </div>
                <div class="col-md-12">
                    <label asp-for="PatientId" class="control-label"></label>
                    <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId" disabled>
                    </select>
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">

                        <label class="control-label">التحاليل</label>
                        <select name="AnalysisId" class="form-control">
                            @foreach (var it in ViewBag.Analysis)
                            {
                                <option value="@it.AnalysisId">@it.a_name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PhysicianId" class="control-label"></label>
                        <select asp-for="PhysicianId" class="form-control" asp-items="ViewBag.PhysicianId" disabled></select>
                        <span asp-validation-for="PhysicianId" class="text-danger"></span>
                    </div>
                </div>
                

               
                @*<div class="col-md-12">
                    <label class="control-label">نتيجه التحليل</label>
                    <input name="r_result" class="form-control" />
                    <span class="text-danger"></span>
                </div>*@
                <br />
                <div class="text-center">


                    <button type="submit" class="btn btn-primary col-3"> <i class="bi bi-send"></i> ارسال</button>

                    <button type="reset" class="btn btn-primary col-3"> <i class="bi bi-arrow-repeat me-1"></i> تحديث</button>
                </div>
            </form>
        </div>
    </div>
    </div>