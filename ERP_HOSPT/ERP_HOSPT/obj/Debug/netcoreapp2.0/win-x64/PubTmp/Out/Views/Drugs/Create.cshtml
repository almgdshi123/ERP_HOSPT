@model ERP_HOSPT.Data.Drug

@{
    Layout = null;
}


<div class="card">
    <div class="card-body">
        <form asp-action="Create" asp-route-id="@Model.DrugId" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="d_name" class="control-label"></label>
                <input asp-for="d_name" class="form-control" />
                <span asp-validation-for="d_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="d_pric" class="control-label"></label>
                <input asp-for="d_pric" class="form-control" />
                <span asp-validation-for="d_pric" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>*@
            <br />
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary" dir="rtl">اضافه</button>
                <button type="reset" class="btn btn-secondary">تحديث</button>
            </div>
        </form>
    </div>
</div>