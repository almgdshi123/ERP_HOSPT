@model ERP_HOSPT.Data.Drug

@{
    Layout = null;
}


<div class="card">
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.DrugId" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DrugId" />
            <div class="form-group">
                <label asp-for="d_name" class="control-label"></label>
                <input asp-for="d_name" class="form-control" />
                <span asp-validation-for="d_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="d_pric" class="control-label"></label>
                <input asp-for="d_pric" class="form-control" />
                <span asp-validation-for="d_pric" class="text-danger"></span>
            </div>
            <br />
            <div class="text-center">


                <button type="submit" class="btn btn-primary col-3"> <i class="bi bi-save"></i> حفط</button>

                <button type="reset" class="btn btn-primary col-3"> <i class="bi bi-arrow-repeat me-1"></i> تحديث</button>
            </div>

        </form>
    </div>
</div>