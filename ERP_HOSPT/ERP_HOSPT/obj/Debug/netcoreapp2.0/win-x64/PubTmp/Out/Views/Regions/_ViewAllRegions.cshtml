@model IEnumerable<ERP_HOSPT.Data.Region>

@{
    ViewData["Title"] = "Index";
}
<style>
    .table-header {
        background-color: #4154f1;
        color: white;
    }
</style>


<div class="pagetitle">
    <h1>قائمه  المناطق</h1>
</div>

<div>

    <section class="section">
        <div class="row">
            <div class="col-lg-8">

                <div class="card">
                    <div class="card-body">

                        <table class="table  table-hover datatable ">
                            <thead class="table-header">
                                
                                <tr>
                                    <th class="col" style="text-align:right;">
                                        @Html.DisplayNameFor(model => model.reg_name)
                                    </th>
                                    <th class="col" style="text-align:right;">
                                        @Html.DisplayNameFor(model => model.city)
                                    </th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.RegionId">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.reg_name)
                                            @*@Html.ActionLink(item.reg_name, "Details", "Regions", new { id = item.RegionId })*@
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.city.cit_name)
                                        </td>

                                        <td>


                                           
                                            <a onclick="showInPopup('@Url.Action("Edit","Regions",new {id=item.RegionId},Context.Request.Scheme)','تعديل')" title="هل تريد التعديل"><i class="fas fa-pen-alt" style="color:yellow"></i></a>




                                            <a onclick="ConfirmDelete(@item.RegionId)" @*class="btn btn-danger btn-sm"*@ title="Remove my profile image"><i class="fas fa-trash-alt" style="color:red"></i></a>




                                        </td>


                                    </tr>

                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->
                        <p>

                            <a onclick="showInPopup('@Url.Action("Create","Regions",null,Context.Request.Scheme)','اضافه منطقه جدبد')" class="btn btn-success text-white" title="المناطق"><i class="fas fa-plus"></i> اضافه منطقه جديد</a>

                        </p>
                    </div>

                </div>

            </div>

        </div>

    </section>





    <div class="modal fade" id="myModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" dir="rtl">
                <div class="modal-header" style=" background-color: #4154f1;
        color: white;">

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <h5 class="modal-title" dir="rtl">Vertically Centered</h5>
                </div>
                <div class="modal-body">
                    <h4>هل انت متاكد انك تريد حذف هاذا</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">اغلاق</button>
                    <button type="button" class="btn btn-danger" onclick="DeleteConfirmed()">حذف</button>
                </div>
            </div>
        </div>
    </div><!-- End Vertically centered Modal-->





    <div class="modal fade" id="myModalEditid" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" dir="rtl">
                <div class="modal-header" style=" background-color: #4154f1;
        color: white;">

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <h5 class="modal-title" dir="rtl">Vertically Centered</h5>
                </div>
                <div class="modal-body">
                    <form method="post" asp-controller="Regions" asp-action="Create">
                        <div class="modal-body">
                            <div class="form-group">
                                <label>ID:</label>
                                <input type="text" class="form-control" name="reg_name" id="reg_name" />

                            </div>

                            <div class="form-group">
                                <label for="inputState" class="form-label">State</label>
                                <select id="inputState" class="form-select">
                                    <option selected>Choose...</option>
                                    <option>.,mb nm..</option>
                                </select>
                            </div>
                            @*<div class="form-group">
                                    <label>Name:</label>
                                    <input type="text" class="form-control" name="Name" id="name" required />
                                </div>*@

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">اغلاق</button>
                    <button type="button" class="btn btn-danger" onclick="EditConfirmed()">حذف</button>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="hiddenEditid" />

    <input type="hidden" id="hiddenEmployeeId" />

</div>
<script>

    var ConfirmDelete = function (id) {

        $("#hiddenEmployeeId").val(id);
        $("#myModal").modal('show');




    }

    var DeleteConfirmed = function () {

        $("#loaderDiv").show();

        var empId = $("#hiddenEmployeeId").val();

        $.ajax({

            type: "POST",
            url: "/Regions/DeleteConfirmed",
            data: { id: empId },

            success: function (rsul) {
                $("#loaderDiv").hide();
                $("#myModal").modal("hide");
                $("#row_" + empId).remove();
                Swal.fire('تم الحذف!',
                    'You clicked the button!',
                    'success')

            },
           error: function (response) {
                 Swal.fire( 'لم يتم الحذف',
      'Your imaginary file is safe :)',
      'error')
            }

        })

    }



</script>

