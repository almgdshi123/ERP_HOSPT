@model ERP_HOSPT.Data.Depart

@{ Layout = null; 
    }
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-route-id="@Model.Departno" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Departno" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="dept_name" class="control-label"></label>
                        <input asp-for="dept_name" class="form-control" />
                        <span asp-validation-for="dept_name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="text-center">


                <button type="submit" class="btn btn-primary col-3"> <i class="bi bi-save"></i> حفط</button>

                <button type="reset" class="btn btn-primary col-3"> <i class="bi bi-arrow-repeat me-1"></i> تحديث</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
