@model ERP_HOSPT.Data.R_analysis

@{
   Layout = null;
}


<div class="card">
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.R_analysisId" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="R_analysisId" />
            <div class="col-md-12">
                <label asp-for="PatientId" class="control-label"></label>
                <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="AnalysisId" class="control-label"></label>
                    <select asp-for="AnalysisId" class="form-control" asp-items="ViewBag.AnalysisId"></select>
                    <span asp-validation-for="AnalysisId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PhysicianId" class="control-label"></label>
                    <select asp-for="PhysicianId" class="form-control" asp-items="ViewBag.PhysicianId"></select>
                    <span asp-validation-for="PhysicianId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <label asp-for="interviewId" class="control-label"></label>
                <select asp-for="interviewId" class="form-control" asp-items="ViewBag.interviewId"></select>
                <span asp-validation-for="interviewId" class="text-danger"></span>
            </div>
            <div class="row">

                <div class="col-md-6">
                    <label asp-for="r_date" class="control-label"></label>
                    <input asp-for="r_date" value="@Model.r_date" class="form-control" />
                    <span asp-validation-for="r_date" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="r_result" class="control-label"></label>
                    <input asp-for="r_result" class="form-control" />
                    <span asp-validation-for="r_result" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <label asp-for="r_describe" class="control-label"></label>
                <input asp-for="r_describe" class="form-control" />
                <span asp-validation-for="r_describe" class="text-danger"></span>
            </div>
            <br />
            <div class="text-center">


                <button type="submit" class="btn btn-primary col-3"> <i class="bi bi-save"></i> حفط</button>

                <button type="reset" class="btn btn-primary col-3"> <i class="bi bi-arrow-repeat me-1"></i> تحديث</button>
            </div>
        </form>
    </div>
</div>

