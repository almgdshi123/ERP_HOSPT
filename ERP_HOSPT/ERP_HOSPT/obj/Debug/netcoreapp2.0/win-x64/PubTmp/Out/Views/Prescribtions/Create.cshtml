@model ERP_HOSPT.Data.Diagnosis

@{
    Layout = null;
}



    <div class="card">
        <div class="card-body">

            <form asp-action="Create" class="row g-3" asp-route-id="@ViewBag.interview" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>




                <div class="col-12">
                    <label asp-for="Dig" class="control-label"></label>
                    <input asp-for="Dig" class="form-control" />
                    <span asp-validation-for="Dig" class="text-danger"></span>


                </div>

                <button type="button" id="more_fields" onclick="add_fields();" class="btn btn-secondary">تحديث</button>

                <div id="room_fileds">

                </div>


                <div class="text-center">


                    <button type="submit" class="btn btn-primary col-3"> <i class="bi bi-send"></i> ارسال</button>

                    <button type="reset" class="btn btn-primary col-3"> <i class="bi bi-arrow-repeat me-1"></i> تحديث</button>
                </div>
            </form><!-- End No Labels Form -->

        </div>
    
    </div> 
<script>
    var room = 0;
function add_fields() {
    room++;
    var objTo = document.getElementById('room_fileds')
    var divtest = document.createElement("div");
    divtest.innerHTML = '<div class="label">الوصفة '+ room +':  </div><div class="content"><label  class="control-label"> اسم الدواء</label><input name="Drug[]" class="form-control" /><label  class="control-label">الجرعه</label><input name="Drug_detail[]" class="form-control" /></div>';

    objTo.appendChild(divtest)
}
</script>

 