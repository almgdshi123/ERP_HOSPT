<div class="col-md-8">
    <div class="card" style="margin:0px 51px 0px 0px">

        <div class="card-body">
            <div class="card-header" style="background-color:#4154f1;color:white;">
               
                    <h3 style="text-align:center;
color:white;">
                        الصلاحيات المستخدمه لهذا الحساب
                    </h3>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        foreach (var role in Model.Roles)
                        {
                            <h5 class="card-title">@role</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">None at the moment</h5>
                    }
                </div>
                <div  class="text-center">
                    <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" class="btn btn-primary  col-3">
                        اداره واضافه الصلاحيات
                    </a>
                </div>
            </div>
        </div>
    </div>
