@model ERP_HOSPT.Data.Prescribtion

@{
    Layout = null;
}

<div class="card">
    <div class="card-body">

        <form asp-action="Edit" class="row g-3" asp-route-id="@Model.PrescribtionId" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PrescribtionId" />
            <div class="col-md-12">
                <label asp-for="PhysicianId" class="control-label"></label>
                <select asp-for="PhysicianId" class="form-select" asp-items="ViewBag.PhysicianId"></select>
            </div>
            <div class="col-md-6">
                <label asp-for="PatientId" class="control-label"></label>
                <select asp-for="PatientId" class="form-select" asp-items="ViewBag.PatientId"></select>
            </div>
            <div class="col-md-6">
                <label asp-for="Pre_date" class="control-label"></label>
                <input type="date" asp-for="Pre_date" class="form-control" />
                <span asp-validation-for="Pre_date" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="Dig" class="control-label"></label>
                <input asp-for="Dig" class="form-control" />
                <span asp-validation-for="Dig" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="DrugId" class="control-label"></label>
                <select asp-for="DrugId" class="form-select" asp-items="ViewBag.DrugId"></select>
            </div>
            <div class="col-md-6">
                <label asp-for="pre_detail" class="control-label"></label>
                <input asp-for="pre_detail" class="form-control" />
                <span asp-validation-for="pre_detail" class="text-danger"></span>
            </div>



            <div class="text-center">


                <button type="submit" class="btn btn-primary col-3"> <i class="bi bi-save"></i> حفط</button>

                <button type="reset" class="btn btn-primary col-3"> <i class="bi bi-arrow-repeat me-1"></i> تحديث</button>
            </div>
        </form><!-- End No Labels Form -->

    </div>
</div>