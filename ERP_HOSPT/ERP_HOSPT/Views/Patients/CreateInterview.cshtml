@model ERP_HOSPT.Data.interview

@{ Layout = null;
}
    <div class="row">
      
        <div class="col-md-12">
            <form asp-action="CreateInterview" asp-route-id="@ViewBag.id" onsubmit="return jQueryAjaxPost(this);">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label"> اسم المريض</label>
                            <input value="@ViewBag.name" class="form-control" disabled />
                            <span class="text-danger"></span>
                        </div>
                    </div>

                </div>

                <div class="col-md-7">
                    <div class="form-floating mb-3">
                        <select class="form-select" id="floatingSelect" aria-label="State" asp-for="inter_type">
                            <option selected value="عادي">عادي</option>
                            <option value="مستعجل">مستعجل</option>
                            <option value="خطير">خطير</option>
                        </select>
                        <label for="floatingSelect">نوع المقابلة</label>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="form-floating mb-3">
                        <select asp-for="PhysicianId" class="form-control" asp-items="ViewBag.PhysicianId">
                        </select>
                        <label for="floatingSelect">الدكتور</label>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="form-floating mb-3">


                        <input type="date" asp-for="inter_date" class="form-control">
                        <label asp-for="inter_date" class="control-label"></label>

                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputPassword" class="col-sm-2 col-form-label">الملاحظات</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" style="height: 100px" asp-for="inter_notes"></textarea>
                    </div>
                </div>
                <br />

                <div class="text-center">
                    @*<input type="submit" value="حفظ" class="btn btn-primary " />*@
                    <button type="submit" class="btn btn-primary col-3"><i class="bi bi-send me-1"></i> ارسال</button>

                    <button type="reset" class="btn btn-secondary col-3">تحديث</button>
                </div>
            </form>
        </div>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
